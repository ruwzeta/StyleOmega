<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.cb006789styleomega.AddProductsActivity">



    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="48dp"
        android:text="Item Name"
        android:layout_alignParentLeft="true"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/tvtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvname"
        android:layout_below="@+id/tvname"
        android:layout_marginTop="36dp"
        android:text="Item Type"
        android:layout_alignLeft="@+id/tvname"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/tvitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvtype"
        android:layout_alignStart="@+id/tvtype"
        android:layout_below="@+id/tvtype"
        android:layout_marginTop="99dp"
        android:text="Item Price"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <EditText
        android:id="@+id/txtItype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvtype"
        android:layout_toEndOf="@+id/tvname"
        android:ems="10"
        android:hint="type"
        android:inputType="textPersonName"
        android:layout_toRightOf="@+id/tvname"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <EditText
        android:id="@+id/itmname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Item Name"
        android:inputType="textPersonName"
        tools:ignore="HardcodedText,RelativeOverlap"
        android:layout_above="@+id/txtItype"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/itmprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Item Price"
        android:inputType="textPersonName"
        android:layout_alignTop="@+id/tvitem"
        android:layout_alignStart="@+id/tvitem"
        android:layout_marginStart="39dp"
        android:layout_alignLeft="@+id/tvitem"
        android:layout_marginLeft="39dp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <EditText
        android:id="@+id/picurl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnadd"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="27dp"
        android:ems="10"
        android:hint="Image Url "
        android:inputType="textPersonName"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/tvname"
        android:layout_toRightOf="@+id/tvname"
        android:text="Add"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/tvurl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvtype"
        android:layout_alignRight="@+id/tvtype"
        android:layout_alignTop="@+id/picurl"
        android:text="PictureURL"
        tools:ignore="HardcodedText,RtlHardcoded" />










</RelativeLayout>