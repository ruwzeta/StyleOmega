<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"

    android:paddingBottom="5dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_column="5"
            android:layout_marginTop="22dp"
            android:layout_row="0"
            android:layout_weight="0.61"
            android:gravity="center_vertical|center"
            android:src="@mipmap/ic_launcher"
            tools:ignore="ContentDescription,ObsoleteLayoutParam" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.61"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_alignEnd="@+id/proName"
                android:layout_alignRight="@+id/proName"
                android:layout_below="@+id/proName"
                android:maxLines="2"
                android:layout_marginTop="11dp"
                android:layout_weight="1"
                android:text="Product Name"
                android:textAlignment="center"
                android:textSize="15dp"
                tools:ignore="HardcodedText,NestedWeights,ObsoleteLayoutParam,RtlHardcoded,SpUsage" />

            <TextView

                android:id="@+id/proName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date1"


                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:layout_weight="1"
                android:maxLines="2"
                android:text="productName"
                android:textAlignment="center"
                android:textSize="16dp"
                tools:ignore="HardcodedText,ObsoleteLayoutParam,SpUsage" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>